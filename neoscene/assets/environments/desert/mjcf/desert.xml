<mujoco>
  <!-- Desert environment with sand and rocks -->
  <asset>
    <material name="sand" rgba="0.85 0.75 0.55 1"/>
    <material name="rock" rgba="0.5 0.45 0.4 1"/>
    <material name="dark_rock" rgba="0.35 0.3 0.28 1"/>
  </asset>
  
  <worldbody>
    <body name="desert_terrain">
      <!-- Sandy ground -->
      <geom name="ground" type="plane" size="100 100 0.1" material="sand" friction="0.8 0.4 0.1"/>
      
      <!-- Dunes -->
      <geom name="dune_1" type="ellipsoid" size="15 8 3" pos="30 20 -1" material="sand"/>
      <geom name="dune_2" type="ellipsoid" size="20 12 4" pos="-25 30 -1.5" material="sand"/>
      <geom name="dune_3" type="ellipsoid" size="12 10 2.5" pos="15 -35 -1" material="sand"/>
      
      <!-- Rocks -->
      <geom name="rock_1" type="box" size="2 1.5 1" pos="10 5 0.5" euler="5 10 15" material="rock"/>
      <geom name="rock_2" type="box" size="1.5 1 0.8" pos="-8 12 0.4" euler="-5 8 -10" material="dark_rock"/>
      <geom name="rock_3" type="ellipsoid" size="3 2 1.5" pos="25 -10 0.8" material="rock"/>
      <geom name="rock_4" type="box" size="1 1.2 0.6" pos="-15 -20 0.3" euler="10 -5 20" material="dark_rock"/>
    </body>
  </worldbody>
</mujoco>

