<mujoco>
  <!-- Forklift model (primitive approximation - mesh pending conversion from STEP) -->
  <asset>
    <material name="forklift_body" rgba="0.2 0.5 0.2 1"/>
    <material name="forklift_metal" rgba="0.3 0.3 0.35 1"/>
    <material name="forklift_wheel" rgba="0.15 0.15 0.15 1"/>
  </asset>
  
  <worldbody>
    <body name="forklift_root">
      <!-- Main body/cab -->
      <geom name="body" type="box" size="0.8 0.5 0.6" pos="0 0 0.8" material="forklift_body"/>
      <geom name="roof" type="box" size="0.7 0.5 0.05" pos="0 0 1.5" material="forklift_metal"/>
      
      <!-- Mast (vertical frame for forks) -->
      <geom name="mast_left" type="box" size="0.05 0.03 0.8" pos="0.9 0.25 0.8" material="forklift_metal"/>
      <geom name="mast_right" type="box" size="0.05 0.03 0.8" pos="0.9 -0.25 0.8" material="forklift_metal"/>
      
      <!-- Forks -->
      <geom name="fork_left" type="box" size="0.5 0.05 0.02" pos="1.3 0.2 0.3" material="forklift_metal"/>
      <geom name="fork_right" type="box" size="0.5 0.05 0.02" pos="1.3 -0.2 0.3" material="forklift_metal"/>
      <geom name="fork_back" type="box" size="0.02 0.3 0.3" pos="0.85 0 0.5" material="forklift_metal"/>
      
      <!-- Counterweight -->
      <geom name="counterweight" type="box" size="0.3 0.45 0.4" pos="-0.9 0 0.6" material="forklift_metal"/>
      
      <!-- Wheels -->
      <geom name="wheel_fl" type="cylinder" size="0.25 0.1" pos="0.5 0.55 0.25" euler="90 0 0" material="forklift_wheel"/>
      <geom name="wheel_fr" type="cylinder" size="0.25 0.1" pos="0.5 -0.55 0.25" euler="90 0 0" material="forklift_wheel"/>
      <geom name="wheel_rl" type="cylinder" size="0.2 0.08" pos="-0.7 0.45 0.2" euler="90 0 0" material="forklift_wheel"/>
      <geom name="wheel_rr" type="cylinder" size="0.2 0.08" pos="-0.7 -0.45 0.2" euler="90 0 0" material="forklift_wheel"/>
    </body>
  </worldbody>
</mujoco>

