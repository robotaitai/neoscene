<mujoco>
  <!-- Simple humanoid figure for scene population -->
  <asset>
    <material name="human_skin" rgba="0.9 0.7 0.6 1"/>
    <material name="human_clothes" rgba="0.2 0.3 0.6 1"/>
    <material name="human_pants" rgba="0.3 0.3 0.35 1"/>
  </asset>
  
  <worldbody>
    <body name="human_root">
      <!-- Torso -->
      <geom name="torso" type="capsule" size="0.15 0.25" pos="0 0 1.1" material="human_clothes"/>
      
      <!-- Head -->
      <geom name="head" type="sphere" size="0.12" pos="0 0 1.55" material="human_skin"/>
      
      <!-- Arms -->
      <geom name="left_arm" type="capsule" size="0.05 0.25" pos="-0.25 0 1.1" euler="0 0 15" material="human_clothes"/>
      <geom name="right_arm" type="capsule" size="0.05 0.25" pos="0.25 0 1.1" euler="0 0 -15" material="human_clothes"/>
      
      <!-- Legs -->
      <geom name="left_leg" type="capsule" size="0.07 0.35" pos="-0.1 0 0.4" material="human_pants"/>
      <geom name="right_leg" type="capsule" size="0.07 0.35" pos="0.1 0 0.4" material="human_pants"/>
    </body>
  </worldbody>
</mujoco>

