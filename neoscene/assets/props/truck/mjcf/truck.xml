<mujoco>
  <!-- Delivery truck model -->
  <asset>
    <material name="truck_cab" rgba="0.9 0.9 0.95 1"/>
    <material name="truck_cargo" rgba="0.85 0.85 0.85 1"/>
    <material name="truck_wheel" rgba="0.15 0.15 0.15 1"/>
  </asset>
  
  <worldbody>
    <body name="truck_root">
      <!-- Cab -->
      <geom name="truck_cab" type="box" size="1.0 1.0 0.8" pos="2.0 0 1.0" material="truck_cab"/>
      <geom name="truck_hood" type="box" size="0.5 0.9 0.3" pos="2.8 0 0.6" material="truck_cab"/>
      
      <!-- Cargo area -->
      <geom name="truck_cargo" type="box" size="2.5 1.15 1.2" pos="-0.8 0 1.4" material="truck_cargo"/>
      
      <!-- Wheels -->
      <geom name="wheel_fl" type="cylinder" size="0.45 0.15" pos="2.5 1.15 0.45" euler="90 0 0" material="truck_wheel"/>
      <geom name="wheel_fr" type="cylinder" size="0.45 0.15" pos="2.5 -1.15 0.45" euler="90 0 0" material="truck_wheel"/>
      <geom name="wheel_rl1" type="cylinder" size="0.45 0.15" pos="-1.5 1.15 0.45" euler="90 0 0" material="truck_wheel"/>
      <geom name="wheel_rr1" type="cylinder" size="0.45 0.15" pos="-1.5 -1.15 0.45" euler="90 0 0" material="truck_wheel"/>
      <geom name="wheel_rl2" type="cylinder" size="0.45 0.15" pos="-2.5 1.15 0.45" euler="90 0 0" material="truck_wheel"/>
      <geom name="wheel_rr2" type="cylinder" size="0.45 0.15" pos="-2.5 -1.15 0.45" euler="90 0 0" material="truck_wheel"/>
    </body>
  </worldbody>
</mujoco>

