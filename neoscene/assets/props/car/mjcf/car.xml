<mujoco>
  <!-- Simple sedan car model -->
  <asset>
    <material name="car_body" rgba="0.8 0.1 0.1 1"/>
    <material name="car_window" rgba="0.2 0.3 0.4 0.7"/>
    <material name="car_wheel" rgba="0.15 0.15 0.15 1"/>
  </asset>
  
  <worldbody>
    <body name="car_root">
      <!-- Main body -->
      <geom name="car_body_lower" type="box" size="2.0 0.85 0.4" pos="0 0 0.5" material="car_body"/>
      <geom name="car_body_upper" type="box" size="1.2 0.8 0.35" pos="-0.2 0 1.05" material="car_body"/>
      
      <!-- Windows -->
      <geom name="windshield" type="box" size="0.02 0.7 0.3" pos="0.8 0 1.0" euler="0 25 0" material="car_window"/>
      <geom name="rear_window" type="box" size="0.02 0.7 0.28" pos="-1.1 0 1.0" euler="0 -30 0" material="car_window"/>
      
      <!-- Wheels -->
      <geom name="wheel_fl" type="cylinder" size="0.35 0.12" pos="1.3 0.85 0.35" euler="90 0 0" material="car_wheel"/>
      <geom name="wheel_fr" type="cylinder" size="0.35 0.12" pos="1.3 -0.85 0.35" euler="90 0 0" material="car_wheel"/>
      <geom name="wheel_rl" type="cylinder" size="0.35 0.12" pos="-1.3 0.85 0.35" euler="90 0 0" material="car_wheel"/>
      <geom name="wheel_rr" type="cylinder" size="0.35 0.12" pos="-1.3 -0.85 0.35" euler="90 0 0" material="car_wheel"/>
    </body>
  </worldbody>
</mujoco>

